<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
             x:Class="CASCRS_Voucher_Import.Contrast.ucCodeContrast"
             mc:Ignorable="d" Loaded="UserControl_Loaded">
    <Grid>
        <ToolBar Height="30" VerticalAlignment="Top">
            <Button Name="btnAdd" Content="增加(F2)" Height="25" VerticalAlignment="Top" Width="Auto" Click="btnAdd_Click"/>
            <Button Name="btnDelete" Content="删除(Del)" Height="25" VerticalAlignment="Top" Width="Auto" Click="btnDelete_Click"/>
        </ToolBar>
        <dxg:GridControl Name="gcCodeContrast" AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" Margin="0,30,0,0"
                         CurrentItemChanged="gcCodeContrast_CurrentItemChanged">
            <dxg:GridControl.View>
                <dxg:TableView Name="tvCodeContrast" AllowPerPixelScrolling="True" ShowTotalSummary="False" ShowGroupPanel="False" LostKeyboardFocus="tvCodeContrast_LostKeyboardFocus" CellValueChanged="tvCodeContrast_CellValueChanged"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</UserControl>
