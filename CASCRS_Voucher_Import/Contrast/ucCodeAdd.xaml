<UserControl x:Class="CASCRS_Voucher_Import.Contrast.ucCodeAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
             mc:Ignorable="d" Loaded="UserControl_Loaded">
 
    <Grid>
        <ToolBar Height="30" VerticalAlignment="Top">
            <Button Name="btnAdd" Content="增加(F2)" Height="25" VerticalAlignment="Top" Width="Auto" Click="btnAdd_Click"/>
            <Button Name="btnDelete" Content="删除(Del)" Height="25" VerticalAlignment="Top" Width="Auto" Click="btnDelete_Click"/>
        </ToolBar>
        <dxg:GridControl Name="gcCodeAdd" AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" Margin="0,30,0,0"
                         CurrentItemChanged="gcCodeAdd_CurrentItemChanged">
            <dxg:GridControl.View>
                <dxg:TableView Name="tvCodeAdd" AllowPerPixelScrolling="True" ShowTotalSummary="False" ShowGroupPanel="False" LostKeyboardFocus="tvCodeAdd_LostKeyboardFocus" CellValueChanged="tvCodeAdd_CellValueChanged"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</UserControl>
