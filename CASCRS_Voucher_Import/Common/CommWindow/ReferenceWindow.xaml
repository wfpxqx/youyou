<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" x:Class="CASCRS_Voucher_Import.Common.CommWindow.ReferenceWindow"
        Title="ReferenceWindow" Height="480" Width="640" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <dxg:GridControl x:Name="gcReference" AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" Margin="0,29,0,-3" MouseDoubleClick="gcReference_MouseDoubleClick">
            <dxg:GridControl.View>
                <dxg:TableView ShowTotalSummary="True" ShowGroupPanel="False"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
        <ToolBar HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="633">
            <Button Name="btnSelect" Content="选择" Height="25" VerticalAlignment="Top" Width="40" Click="btnSelect_Click"/>
            <Button Name="btnRefresh" Content="刷新" Height="25" VerticalAlignment="Top" Width="40" Click="btnRefresh_Click"/>
            <Button Name="btnClose" Content="关闭" Height="25" VerticalAlignment="Top" Width="40" Click="btnClose_Click"/>
        </ToolBar>
    </Grid>
</Window>
